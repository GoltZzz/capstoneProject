<%- layout('layouts/boilerplate') %>

<style>
    :root {
        --primary-color: #1a2a6c;
        --secondary-color: #b21f1f;
        --accent-color: #fdbb2d;
        --bg-gradient: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        --card-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    /* Animation Keyframes */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .container {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out forwards;
        padding: 2rem;
    }

    .breadcrumb-nav {
        opacity: 0;
        animation: slideInLeft 0.6s ease-out 0.2s forwards;
        background: white;
        padding: 1.5rem 2rem;
        border-radius: 15px;
        box-shadow: var(--card-shadow);
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: relative;
        overflow: hidden;
    }

    .breadcrumb-nav::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 4px;
        background: var(--bg-gradient);
    }

    .card {
        opacity: 0;
        animation: scaleIn 0.6s ease-out 0.4s forwards;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        background: var(--bg-gradient) !important;
        padding: 1.5rem;
        border: none;
    }

    .table {
        margin: 0;
    }

    .table thead th {
        background: rgba(26, 42, 108, 0.05);
        color: var(--primary-color);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding: 1rem;
        border: none;
    }

    .table tbody tr {
        opacity: 0;
        animation: fadeInUp 0.5s ease-out forwards;
        transition: var(--transition);
    }

    /* Stagger row animations */
    .table tbody tr:nth-child(1) { animation-delay: 0.6s; }
    .table tbody tr:nth-child(2) { animation-delay: 0.7s; }
    .table tbody tr:nth-child(3) { animation-delay: 0.8s; }
    .table tbody tr:nth-child(4) { animation-delay: 0.9s; }
    .table tbody tr:nth-child(5) { animation-delay: 1.0s; }

    .table tbody tr:hover {
        background: rgba(26, 42, 108, 0.02);
        transform: translateX(5px);
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-color: rgba(0, 0, 0, 0.05);
    }

    .btn-info {
        background: var(--bg-gradient);
        border: none;
        padding: 0.5rem 1rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: var(--transition);
        font-weight: 500;
    }

    .btn-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .badge {
        padding: 0.5rem 1rem;
        font-weight: 500;
        font-size: 0.9rem;
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .alert-info {
        opacity: 0;
        animation: scaleIn 0.6s ease-out 0.4s forwards;
        background: rgba(26, 42, 108, 0.05);
        border: none;
        color: var(--primary-color);
        border-radius: 10px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .alert-info::before {
        content: '\f05a';
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        font-size: 1.5rem;
        color: var(--primary-color);
    }

    /* Breadcrumb Styles */
    .breadcrumb {
        margin: 0;
        padding: 0;
        background: transparent;
        display: flex;
        align-items: center;
    }

    .breadcrumb-item {
        display: flex;
        align-items: center;
        color: #6c757d;
    }

    .breadcrumb-item a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .breadcrumb-item a:hover {
        color: var(--secondary-color);
    }

    .breadcrumb-item.active {
        color: var(--secondary-color);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "â†’";
        color: #6c757d;
        margin: 0 0.5rem;
    }

    .breadcrumb-status {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 0.5rem;
        border-top: 1px solid #e9ecef;
        font-size: 0.9rem;
        color: #6c757d;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-indicator i {
        font-size: 0.75rem;
    }

    @media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        .breadcrumb-status {
            flex-direction: column;
            gap: 0.5rem;
            align-items: flex-start;
        }

        .card-header {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .table-responsive {
            margin: 0 -1rem;
        }
    }
</style>

<div class="container">
    <div class="breadcrumb-nav">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <i class="fas fa-home"></i>
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/users">
                        <i class="fas fa-shield-alt"></i>
                        Admin Dashboard
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/users/<%= user._id %>">
                        <i class="fas fa-user"></i>
                        <%= user.username %>
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    <i class="fas fa-map-marker-alt"></i>
                    Locations
                </li>
            </ol>
        </nav>
        <div class="breadcrumb-status">
            <div class="status-indicator">
                <i class="fas fa-circle text-success"></i>
                System Status: Online
            </div>
            <div class="status-indicator">
                <i class="fas fa-clock"></i>
                Last Updated: <%= new Date().toLocaleTimeString() %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Locations for <%= user.username %>
                    </h4>
                    <span class="badge">
                        <i class="fas fa-list me-1"></i>
                        <%= user.locations.length %> locations
                    </span>
                </div>
                <div class="card-body">
                    <% if (user.locations.length === 0) { %>
                        <div class="alert alert-info">
                            This user has no locations yet.
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Location</th>
                                        <th>Description</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% user.locations.forEach(location => { %>
                                        <tr>
                                            <td><strong><%= location.title %></strong></td>
                                            <td><%= location.location %></td>
                                            <td><%= location.description %></td>
                                            <td><%= location.createdAt ? location.createdAt.toLocaleDateString() : 'N/A' %></td>
                                            <td>
                                                <a href="/sfas/<%= location._id %>" class="btn btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
